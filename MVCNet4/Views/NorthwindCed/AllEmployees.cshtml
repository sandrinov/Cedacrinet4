@model IEnumerable<CommonNet4.DTO.Employee>

@{
    ViewBag.Title = "AllEmployees";
}

<h2>AllEmployees</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.City
                </td>
                <td><a href="/NorthwindCed/EmployeeDetails/@item.EmployeeID">View</a></td>
            </tr>
        }

    </tbody>
</table>

