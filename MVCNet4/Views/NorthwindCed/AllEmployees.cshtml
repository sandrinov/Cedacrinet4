@model IEnumerable<CommonNet4.DTO.Employee>

@{
    ViewBag.Title = "AllEmployees";
}

<h2>AllEmployees</h2>

<style>
    .hidden_element {
        display: none;
    }

    .pointerlike {
        cursor: pointer;
    }
</style>

<div class="row">
    <div class="col-sm-6">
        <table class="table table-striped" id="tbl_employee">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>City</th>
                    <th>Orders</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.EmployeeID
                        </td>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            <div class="pointerlike">View</div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
        <p>List of Orders</p>
        <ul id="lst_orders"></ul>
        <div>
            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-chevron-left"></span> Left
            </button>
            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-chevron-right"></span> Left
            </button>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('th:first').addClass('hidden_element');
        $('tr td:first-child').addClass('hidden_element');

        $('.pointerlike').click(function () {
            var $tr = $(this).closest('tr');
            var employeeid = $tr.find('td').first().text().trim();

            var server_url = 'http://localhost:17570/';

            $.ajax({
                cache: false,
                type: "GET",
                url: server_url + 'api/orders?EmployeeID=' + employeeid,
            }).done(function (orders) {
                $('#lst_orders').empty();
                $.each(orders, function (i, order) {
                    $('#lst_orders').append(
                        '<li>' +
                        order.ShipName +
                        ' ' +
                        order.ShipAddress +
                        ' ' +
                        order.ShipCity +
                        '</li>');

                });
            });// end done
        });
    });


</script>